<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/hf_cover_edited"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    tools:context="com.libraryhf.libraryharryfultz.activity.Dashboard">

    <ImageView
        android:id="@+id/navHeaderImageViewId"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/hflogo" />

    <TextView
        android:id="@+id/navHeaderTitleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navHeaderImageViewId"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_gravity="left"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/navHeaderSubtitleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="12sp" />

</RelativeLayout>
